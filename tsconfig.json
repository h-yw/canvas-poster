{
    "compilerOptions": {
      "target": "esnext",
      "useDefineForClassFields": true,
      "isolatedModules": true,
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": ["esnext", "dom"],
      "types": ["vite/client"],
      "declaration": true,
      "declarationDir": "dist",
      "baseUrl": "/",
      "typeRoots": ["/lib","./types","./node_modules/@types"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
  }
  